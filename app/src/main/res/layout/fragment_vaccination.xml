<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.VaccinationFragment"
    android:background="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_daily_vaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/countries_daily_vaccinations"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/vacc_size"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textview"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/text_daily_vaccination" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>